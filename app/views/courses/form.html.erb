      <%= f.error_notification %>

        <div class="form-group">
          <%= f.input :year, required: true, input_html: { class: 'form-control custom-select' }, collection: (Time.current.year - 35 )..(Time.current.year + 1 ), :include_blank => 'Debe eligir un aÃ±o'%>
        </div>

        <div class="form-actions text-right">
