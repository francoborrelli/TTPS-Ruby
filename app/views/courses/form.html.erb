<% content_for :form do -%>
  <%= simple_form_for(@course) do |f| %>
    <div class="form-group">
      <%= f.input :year,  input_html: { class: 'custom-select' }, collection: time_range.reverse, :include_blank => t(:select_year)%>
    </div>
    <br>
    <div class="form-actions text-right">
      <%= link_to t(:cancel), courses_path, class: "btn btn-secondary" %>
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  <% end %>
<% end %>

<%= render 'layouts/card', title: title, xl: false %>