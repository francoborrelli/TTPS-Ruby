<div class="card-form xl">
  <div class="card">
    <div class="card-body">
      <h5><%= t(@title) %></h5> 
      <hr>
      <%= simple_form_for [@examination.course, @examination] do |f| %>
          <div class="form-group">
            <%= f.input :title, required: true %>
          </div>
          <div class="form-group">
            <%= f.input :date, as: :string, input_html: { class: "datepicker", readonly: true, value: time_format(f.object.date) } %>
          </div>
          <div class="form-group">
            <%= f.input :min_score, required: true %>
          </div>
          <div class="form-actions text-right">
            <%= link_to t(:cancel), course_students_path, class: "btn btn-default" %>
            <%= f.button :submit, class: "btn btn-primary" %>
          </div>
      <% end %>
    </div>
  </div>
  </div>
