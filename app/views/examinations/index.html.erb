<div class="card card-table">
  <div class="container card-body">
    <h1><%= (t :examinations).capitalize %></h1>
    <hr>
    <div class="card-btns">
      <%= link_to t(:new_examination), new_course_examination_path(params[:course_id]), class: "btn btn-primary float-right btn-sm" %>
    </div>
<table class="table table-striped text-center table-responsive table-courses">
  <thead>
  <tr>
    <th><%= t :title %></th>
    <th><%= t :examination_date %></th>
    <th><%= t :min_score %></th>
    <th><%= t :edit %></th>
    <th><%= t :delete %></th>
  </tr>

<% @examinations.each do |examination| %>
  <tr>
    <td><%= examination.title %></td>
    <td><%= examination.date.strftime("%d-%m-%y") %></td>
    <td><%= examination.min_score %>%</td>
    <td><%= link_to t(:edit), edit_course_examination_path(examination.course, examination) %></td>
    <td><%= link_to t(:destroy), [examination.course, examination], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
      <div class="float-right">
      </div>
      <br>
    </div>
  </div>  


