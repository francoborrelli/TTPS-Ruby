<div class="card card-table">
  <div class="container card-body">
    <h1>
      <%= (t :student).pluralize.capitalize %>
    </h1>
    <hr>
    <div class="card-btns">
      <%= link_to t(:new) +' ' + t(:student), new_course_student_path, class: "btn btn-primary float-right btn-sm" %>
    </div>

    <table class="table table-striped text-center table-responsive table-students">
      <thead>
        <tr>
          <th>
            <%= t :surname %>
          </th>
          <th>
            <%= t :name %>
          </th>
          <th>
            <%= t :s_number %>
          </th>
          <th>
            Email
          </th>
          <th>
            <%= t :marks %>
          </th>
          <th>
            <%= t :edit %>
          </th>
          <th>
            <%= t :delete %>
          </th>
        </tr>
      </thead>
        <tbody>
          <% if @students.empty? %>
            <td colspan="5">
            <td colspan="7">
              <%= t :no_results %>
            </td>
          <% else %>
            <% @students.each do |student| %>
              <tr>
                <td>
                  <%= student.surname %>
                </td>
                <td>
                  <%= student.name %>
                </td>
                <td>
                  <%= student.s_number %>
               </td>
                <td>
                  <%= student.email %>
               </td>
                <td>
                  <%= link_to edit_course_student_path(@course, student), class: "btn btn-warning btn-sm", :title => (t(:edit)) do %>
                    <% fa_icon "pencil" %>
                  <% end %>
                </td>
                <td>
                  <%= link_to edit_course_student_path(@course, student), class: "btn btn-warning btn-sm", :title => (t(:edit)) do %>
                    <% fa_icon "pencil" %>
                  <% end %>
                </td>
                <td>
                  <button data-id="<%= @course.id %>" data-toggle="modal" data-target="#delete-confirm" title="<%= t(:delete) %>" class="btn-delete btn btn-sm btn-danger">
                    <%= fa_icon "trash" %>
                  </button>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
      <div class="float-right">
        <%= paginate @students %>
      </div>
      <br>
    </div>
  </div>  

