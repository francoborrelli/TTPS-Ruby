<div class="card-form xl">
  <div class="card">
    <div class="card-body">
      <h5 class="bold"><%= t(title) %></h5> 
      <hr>
      <%= simple_form_for [@course, @student] do |f| %>
          <div class="form-group">
            <%= f.input :name, required: true, placeholder: t(:name) %>
          </div>
          <div class="form-group">
            <%= f.input :surname, required: true, placeholder: t(:surname)  %>
          </div>
          <div class="form-group">
            <%= f.input :dni, required: true, placeholder: t(:document)  %>
          </div>
          <div class="form-group">
            <%= f.input :s_number, required: true, placeholder: t(:s_number)  %>
          </div>
          <div class="form-group">
            <%= f.input :email, required: true, placeholder: t(:email)  %>
          </div>
          <br>
          <div class="form-actions text-right">
            <%= link_to t(:cancel), course_students_path, class: "btn btn-secondary" %>
            <%= f.button :submit, class: "btn btn-primary" %>
          </div>
      <% end %>
    </div>
  </div>
</div>